<%- include('../../includes/admin-header') %>
  <main>
    <div class="multiple-options">
      <div class="multiple-options__checked-num">Selected items: <span></span></div>
      <div class="multiple-options__actions">
        <button class="button" id="delete-multiple-items">delete</button>
      </div>
    </div>
    <h2>Categories</h2>
  
    <a class="button" href="/admin/articles/add-category">Add New Category</a>
    <div class="content">
      <table>
        <colgroup>
        <col class="check">
          <col class="name">
          <col class="slug">
          <col class="amount">
          <col class="actions">
        </colgroup>
        <thead>
          <tr>
            <th></th>
            <th>Category Name</th>
            <th>Category Slug</th>
            <th>Number of Articles</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (categories.length> 0) {%>
            <% for (let category of categories) {%>
              <tr>
                <td><input type="checkbox" class="categories__check" value="<%= category.id %>"/></td>
                <td>
                  <%= category.category_name %>
                </td>
                <td>
                  <%=category.category_slug %>
                </td>
                <td>
                  <%=category.posts.length %>
                </td>
                <td>
                  <% if (category.id !== 1) { %>
                    <button class="table-options"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                    <ul class="table-options-list">
                      <li>
                        <a class="categories__item-delete" href="#">Delete</a>
                        <input type="hidden" name="categoryId" value="<%=category.id%>">
                      </li>
                    </ul>
                    
                  <% } %>
                </td>
              </tr>
              <% } %>
                <%} else {%>
                  <tr>
                    <td colspan="4">No categories</td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
    </div>
    <%-include('../../includes/pagination') %>

  </main>

<%- include('../../includes/admin-footer') %>